<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main"
    tools:context="com.example.sangwoon.rang.MainActivity">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        >


        <!-- slide layout -->

        <LinearLayout
            android:id="@+id/ll_menuLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff393c46"
            android:gravity="left"
            android:orientation="vertical"
            android:textColor="#ff000000" >

            <!-- include -->

            <include
                android:id="@+id/ic_leftslidemenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/main_slidemenu" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mainlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffffff"
            android:gravity="left"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/main">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@drawable/main"
                    >


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="0.5"
                            style="?android:attr/ratingBarStyleSmall"
                            android:id="@+id/ratingBar7"
                            android:layout_marginLeft="15dp" />

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="0.5"
                            style="?android:attr/ratingBarStyleSmall"
                            android:id="@+id/ratingBar8"
                            android:layout_marginLeft="130dp" />

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="0.5"
                            style="?android:attr/ratingBarStyleSmall"
                            android:id="@+id/ratingBar9"
                            android:layout_marginLeft="240dp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|bottom"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="35dp">

                        <ImageButton
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ok"
                            android:id="@+id/imageButton"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp" />

                        <ImageButton
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ok"
                            android:id="@+id/imageButton2"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="10dp" />

                        <ImageButton
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ok"
                            android:id="@+id/imageButton3"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="10dp" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout">

                    <ImageButton
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:src="@drawable/menu_bars"
                        android:id="@+id/slide_menu"
                        android:background="@color/white"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/relativeLayout"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/topblayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="님 환영합니다!"
                        android:id="@+id/textView2"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="17dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imagebutton_menu"
                    android:gravity="center_vertical"
                    android:layout_gravity="center">

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:text="바코드촬영"
                        android:src="@drawable/search_barcode"
                        android:id="@+id/barcode_button"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp" />

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:text="비교하기"
                        android:src="@drawable/product_compare"
                        android:id="@+id/compare"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="left|center|right"
                        android:layout_marginLeft="35dp" />

                    <ImageButton
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:text="상세검색"
                        android:src="@drawable/user_info"
                        android:id="@+id/detail_search"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentTop="false"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentEnd="false"
                        android:layout_marginLeft="130dp"
                        android:layout_alignWithParentIfMissing="false" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text=" 금주 추천상품 "
                        android:id="@+id/week_chocun"

                        android:layout_marginTop="150dp"
                        android:layout_marginLeft="10dp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/topblayout"
                    android:layout_marginTop="50dp">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edit_message"
                        android:textColor="#000000"
                        android:completionThreshold="1"
                        android:hint="Enter a Messga"
                        android:layout_weight="8.42"
                        android:layout_toLeftOf="@+id/button"
                        android:layout_toStartOf="@+id/button">

                        <requestFocus  />
                    </AutoCompleteTextView>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="검색"
                        android:onClick="sendMessage"
                        android:layout_alignParentRight="true"
                        android:id="@+id/button" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="110dp">

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>


</RelativeLayout>

